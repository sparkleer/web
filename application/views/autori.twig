{% extends "main.twig" %}
{% block content %}
<div id="autor-edit" class="modal bootstrap-dialog type-info fade size-normal in user-dialog col-md-6 col-md-offset-3" tabindex="-1" role="dialog" data-width="760" style="display: none;">
	<form role="form" name="autor-edit-form" id="autor-edit-form">
	    <input type="hidden" id="id_autor" name="id_autor">
	    <input type="hidden" id="url" name="url" value="autori/editAutor">
    <div class="modal-header alert-info">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h4 class="modal-title">Editace autora</h4>
    </div>
    <div class="modal-body">
		<div class="row">
			<div class="col-md-6">
				<h4>Údaje autora</h4>
				<div class="form-group">
					<label for="jmeno">Jméno: </label>
					<input class="form-control" name="jmeno" id="jmeno">
				</div>
							
					
				
			</div>
			<div class="col-md-6">
				<h4>&nbsp;</h4>
				<div class="form-group">
					<label for="prijmeni">Příjmení: </label>
					<input class="form-control" name="prijmeni" id="prijmeni">
				</div>
	
					
					
			</div>
		</div>
		
    </div>
    <div class="modal-footer">
		<button type="button" data-dismiss="modal" class="btn btn-default"><i class="fa fa-close"></i> Zavřít</button>
		
		<button type="button" type="submit" id="autor-edit-submit" class="btn btn-primary" ><i class="fa fa-save"></i> Uložit</button>
	
    </div>
	</form>
</div> 
<div class="row">
    <div class="col-md-3">
    <button id="newAutor" data-toggle="modal" data-target="#autor-edit"><i class="fa fa-plus"></i> Nový autor</button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
		
	<div class="table-responsive">
	    <table class="table table-striped table-hover">
		<thead>
		    <tr>
				
					
			<th>ID</th>
			<th class="th-autor">Jméno</th>
			<th class="th-rok">Příjmení</th>
			


			<th class="options-col">Volby</th>
				
		    </tr>
		</thead>
		<tbody>
		    {% for autor in autori %}
			<tr>

			    <td>{{ autor.id_autor }}</td>
			   
			    <td>{{ autor.jmeno }}</td>
			    <td>{{ autor.prijmeni }}</td>
			
			    
			    <td>
				<div class="btn-group" role="group">
				  <button type="button" class="btn btn-default btn-responsive showUserEditDialog"  data-id="{{ autor.id_autor }}" data-toggle="modal" data-target="#autor-edit"><span class="fa fa-pencil" ></span></button>
				  
				   <button type="button" class="btn btn-default btn-responsive deleteButton " data-id="{{ autor.id_autor }}" data-toggle="tooltip" title="Smazat uživatele"><span class="fa fa-times red"></span></button></div>
				 
				</div>
			    </td>
			    
			</tr>
		    {% endfor %}
		</tbody>
	    
	    </table>
	</div>
    </div>




</div>

{% endblock %}
        
    

