{% extends "main.twig" %}

{% block content %}

    
    <div class="row">
	<div class="col-md-4 col-md-offset-4">
	   
		<div class="row"> {% if chyba is defined %} <div class="centered alert alert-{{ chyba_type }}"> {{ chyba | raw }} </div> {% endif %} </div>
	    <form action="{{ link }}" method="post" role="form" class="form-horizontal form-signin">
	    <div class="form-group">
		
		<label for="mail_odesilatele" class="col-sm-2 control-label" >Login:</label>
		<div class="col-sm-10">
		    <input id="mail_odesilatele" class="form-control" name="mail_odesilatele" type="text" size="20">
		</div>
	    </div>
	    <div class="form-group">
		<label for="heslo" class="col-sm-2 control-label">Heslo:</label>
		<div class="col-sm-10">
		    <input type="password" id="heslo" class="form-control" name="heslo" size="20">
		</div>
	    </div>
		<button type="submit" name="prihlaseni" id="prihlasit" class="btn btn-default"><i class="fa fa-sign-in"></i>&nbsp; Přihlásit</button> <br><br>
		<a href="?url=uzivatele/registrace">Registrace</a>
	 </form>
	</div>     
    </div>
    


{% endblock %}