{% extends "main.twig" %}
{% block content %}
<div id="user-edit" class="modal bootstrap-dialog type-info fade size-normal in user-dialog col-md-6 col-md-offset-3" tabindex="-1" role="dialog" data-width="760" style="display: none;">
	<form role="form" name="user-edit-form" id="user-edit-form">
	    <input type="hidden" id="id_uzivatel" name="id_uzivatel">
	    <input type="hidden" id="url" name="url" value="uzivatele/editUzivatel">
    <div class="modal-header alert-info">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h4 class="modal-title">Editace uživatele</h4>
    </div>
    <div class="modal-body">
		<div class="row">
			<div class="col-md-6">
				<h4>Údaje uživatele</h4>
				<div class="form-group">
					<label class="control-label" for="jmeno">Jméno: </label>
					<input class="form-control" name="jmeno" id="jmeno">
				</div>
				<div class="form-group">
					<label class="control-label" for="prijmeni">Příjmení: </label>
					<input class="form-control" name="prijmeni" id="prijmeni">
				</div>		
				<div class="form-group">
					<label class="control-label" for="login">Login: </label>
					<input type="text" class="form-control" name="login" id="login" size="6">
					
				</div>		
					
				
			</div>
			<div class="col-md-6">
				<h4>&nbsp;</h4>
				<div class="form-group">
					<label class="control-label" for="heslo">Heslo: <small class="gray">(Neměnit = ponechte prázdné)</small></label>
					<input class="form-control" type="password" name="heslo" id="heslo">
				</div>
				<div class="form-group">
					<label class="control-label" for="heslo1">Heslo znovu: </label>
					<input class="form-control" type="password" name="heslo1" id="heslo1">
				</div>		
					
					
			</div>
		</div>
		
    </div>
    <div class="modal-footer">
		<button type="button" data-dismiss="modal" class="btn btn-default"><i class="fa fa-close"></i> Zavřít</button>
		
		<button type="button" type="submit" id="user-edit-submit" class="btn btn-primary" ><i class="fa fa-save"></i> Uložit změny</button>
	
    </div>
	</form>
</div> 
<div class="row">
    <div class="col-md-3">
    <button id="newUser" data-toggle="modal" data-target="#user-edit"><i class="fa fa-plus"></i> Nový uživatel</button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
		
	<div class="table-responsive">
	    <table class="table table-striped table-hover">
		<thead>
		    <tr>
				
					
			<th>ID</th>
			<th class="th-autor">Jméno</th>
			<th class="th-rok">Příjmení</th>
			<th class="th-zanr">login</th>


			<th class="options-col">Volby</th>
				
		    </tr>
		</thead>
		<tbody>
		    {% for uziv in uzivatele %}
			<tr>

			    <td>{{ uziv.id_uzivatel }}</td>
			   
			    <td>{{ uziv.jmeno }}</td>
			    <td>{{ uziv.prijmeni }}</td>
			    <td>{{ uziv.login }}</td>
			    
			    <td>
				<div class="btn-group" role="group">
				  <button type="button" class="btn btn-default btn-responsive showUserEditDialog"  data-id="{{ uziv.id_uzivatel }}" data-toggle="modal" data-target="#user-edit"><span class="fa fa-pencil" ></span></button>
				  
				   <button type="button" class="btn btn-default  btn-responsive deleteButton " data-id="{{ uziv.id_uzivatel }}" data-toggle="tooltip" title="Smazat uživatele"><span class="fa fa-times red"></span></button></div>
				 
				</div>
			    </td>
			    
			</tr>
		    {% endfor %}
		</tbody>
	    
	    </table>
	</div>
    </div>




</div>

{% endblock %}
        
    

