{% extends "main.twig" %}

{% block content %}
<div class="row">
    <div class="col-md-4 col-md-offset-4">


	
	    
		    <div class="row"> {% if chyba is defined %} <div class="centered alert alert-{{ chyba_type }}"> {{ chyba | raw }} </div> {% endif %} </div>

		    <form action ="{{ link }}" method="post" role="form" class="form-horizontal form-signin">
			<div class="form-group">
			    <label for="jmeno">Jmeno: </label>
			    <input name="jmeno" class="form-control" id="jmeno" size="20" value="{{ udaje.jmeno }}">
			</div>
			<div class="form-group">
			    <label for="prijmeni">Prijmeni: </label>
			    <input name="prijmeni" class="form-control" id="prijmeni" size="20" value="{{ udaje.prijmeni }}">
			</div>
			<div class="form-group">
			    <label for="login">Login: </label>
			    <input name="login" class="form-control" id="login" size="20" value="{{ udaje.login }}">
			</div>
			<div class="form-group">
			    <label for="heslo">Password: </label>
			    <input type="password" class="form-control" name="heslo" id="heslo" size="20">
			</div>
			    
			<div class="form-group">
			    <label for="heslo1">Password znovu: </label>
			    <input type="password" class="form-control" name="heslo1" id="heslo1" size="20">
			</div>

			<button type="submit" name="registrace" class="btn btn-default"><i class="fa fa-check"></i>&nbsp; Zaregistrovat</button>

		    </form>

		

	  
    </div>
	</div>
{% endblock %}